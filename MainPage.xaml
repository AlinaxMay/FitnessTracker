<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FitnessTracker"
             x:Class="FitnessTracker.MainPage"
             BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#212529}">

    <ScrollView>
        <Grid RowSpacing="20" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Frame Grid.Row="0" 
                   BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#343a40}"
                   Padding="20" 
                   CornerRadius="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Your Progress"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label x:Name="StepsLabel"
                           Text="0"
                           FontSize="48"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#0d6efd, Dark=#00ff00}"
                           HorizontalOptions="Center"/>
                    <Label Text="steps today"
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    
                    <Button x:Name="ResetButton"
                            Text="Reset Progress"
                            FontAttributes="Bold"
                            BackgroundColor="{AppThemeBinding Light=#6c757d, Dark=#495057}"
                            TextColor="White"
                            HeightRequest="50"
                            CornerRadius="25"
                            Clicked="OnResetButtonClicked"/>

                </VerticalStackLayout>
                
            </Frame>
            <VerticalStackLayout Grid.Row="2" 
                     Spacing="15">
                <Button x:Name="StartButton"
                        Text="Start Tracking"
                        FontAttributes="Bold"
                        BackgroundColor="{AppThemeBinding Light=#0d6efd, Dark=#198754}"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="25"
                        Clicked="OnStartButtonClicked"/>    

                <!-- Goal Progress Section -->
            <Frame Grid.Row="1" 
                   BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#343a40}"
                   Padding="20"
                   Margin="0,10"
                   CornerRadius="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Goal Progress"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <ProgressBar x:Name="StepProgressBar"
                                 Progress="0"
                                 ProgressColor="{AppThemeBinding Light=#0d6efd, Dark=#00ff00}"
                                 HeightRequest="10"
                                 Scale="1.0"
                                 AnchorX="0"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Fill"/> 

                    <Grid ColumnDefinitions="*,*">
                        <Label x:Name="ProgressLabel"
                               Text="0%"
                               Grid.Column="0"/>
                        <Label x:Name="GoalLabel"
                               Text="Goal: Not Set"
                               Grid.Column="1"
                               HorizontalOptions="End"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons Section -->
            <VerticalStackLayout Grid.Row="2" 
                                Spacing="15">
                

                <Button x:Name="SetGoalButton"
                        Text="Set Goal"
                        FontAttributes="Bold"
                        BackgroundColor="{AppThemeBinding Light=#0d6efd, Dark=#198754}"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="25"
                        Clicked="OnSetGoalClicked"/>
                </VerticalStackLayout>

                <Label Text="Step History"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="10,20,10,10"/>

                <ListView x:Name="HistoryList"
                          BackgroundColor="{AppThemeBinding Light=#0d6efd, Dark=#198754}"
                          SeparatorColor="Gray"
                          Margin="10,0,10,10">      
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Date}" Detail="{Binding Steps}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>